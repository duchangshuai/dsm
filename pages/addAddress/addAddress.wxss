.form-list {
    position: relative;
    margin-bottom: 20rpx;
    color:#333333;
    font-size:32rpx;
}

.form-list:first-child {
    margin-top: 24rpx;
}

.form-list::before, .form-list::after {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    height: 1px;
    width: 100%;
    transform: scaleY(.5);
    background-color: #e3e3e3;
}

.form-list::before {
    top: 0;
}

.form-list::after {
    bottom: 0;
}

.form-item {
    position: relative;
    box-sizing: border-box;
    display: flex;
    width: 100%;
    padding: 20rpx 24rpx;
    background-color: #fff;
}

.form-item::before {
    content: '';
    display: block;
    position: absolute;
    z-index: 99;
    left: 0;
    top: 0;
    height: 1px;
    width: 100%;
    transform: scaleY(.5);
    background-color: #e1e1e1;
}
.form-item-bd {
    height: 100rpx;
    flex: 1;
    line-height: 100rpx;
    padding-left:20rpx;
}
.form-item-bd .input{
  height: 100rpx;
  line-height: 100rpx;
}
.new-area{
  height: 100rpx;
  line-height: 100rpx;
}
input, .input {
