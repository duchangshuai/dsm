/* pages/uploadpicture/uploadpicture.wxss */
/* 上传量门图 */
.uploder-wrapper{
  height:320rpx;
  background:#fff;
  padding:0 24rpx;
  margin-bottom:20rpx;
}
.uploder-title{
  color:#333333;
  font-size:32rpx;
  padding-top:14rpx;
}
.uploder-detail{
  font-size:26rpx;
  color:#9B9B9B;
  margin-top:12rpx;
  margin-bottom:24rpx;
}
.weui-uploader__file{
  float:left;
  text-align:center;
  margin-right:9rpx;
  margin-bottom:9rpx;
}
.weui-uploader__img{
  width:154rpx;
  height:154rpx;
}
.weui-uploader__img image{
  width:100%;
  height:100%;
}
.weui-uploader__input-box {
 float:left;
position:relative;
margin-right:9px;
margin-bottom:9px;
width:154rpx;
height:154rpx;
border:1px solid #D9D9D9;
}
.weui-uploader__input {
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
}
.imgSize{
  width:37rpx;
  height:37rpx;
  margin-top:30rpx;
  margin-left:68rpx;
}
.imgSize image{
  width:100%;
  height:100%;
}
.img-title{
  color:#9B9B9B;
  font-size:22rpx;
  text-align: center;
  margin-top:15rpx;
}
 .clearfix:after{
   content:'';
   display:block;
   clear:both;
   height:0;
   overflow:hidden;
   visibility:hidden;
   }
.clearfix{
  zoom:1;
  }
.submitBtn{
  width:100%;
  height:78rpx;
  position:relative;
}
.submitbox{
  width:274rpx;
  height:100%;
  box-sizing:border-box;
  position:absolute;
  left:0;
  right:0;
  margin:auto;
  border:1px solid #FF4043;
  border-radius:8rpx;
  text-align:center;
  line-height:78rpx;
  font-size:32rpx;
  color:#fff;
  background:#FF4043;
}