/* pages/redenvelopes/redenvelopes.wxss */
.container{
  background:#ff4e4f;
  width:100%;
  padding:0;
}
.header{
  width:100%;
  height:444rpx;
}
.header image{
  width:100%;
  height:100%;
}
.list-box{
  background:#fff;
  width:90%;
  height:206rpx;
  margin:0 auto;
  border-radius: 24rpx;
  display:flex;
  margin-bottom:20rpx;
}
.sale-money{
  width:216rpx;
  border-right:1rpx solid #e7e7e7;
  font-size:64rpx;
  color:#f33c3c;
  text-align: center;
  line-height:206rpx;
}
.list-right{
  font-size:28rpx;
  padding-top:15rpx;
  margin-left:55rpx;
}
.sale{
  font-size:50rpx;
}
.list-title{
  font-size:32rpx;
}
.btn{
  width:90%;
  margin:0 auto;
  height:90rpx;
  line-height:90rpx;
  text-align: center;
  background: #efd670;
  color:#f13535;
  font-size:32rpx;
  font-weight:bold;
  border-radius: 24rpx;
}