.form-list {
    margin-bottom: 30rpx;
    color:#333333;
    font-size:32rpx;
}
.form-list1 {
    margin-bottom: 30rpx;
    color:#333333;
    font-size:32rpx;
}
 .form-list:first-child {
    margin-top: 24rpx;
} 
 
 .form-list::before, .form-list::after {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    /* height: 1px; */
    width: 100%;
    transform: scaleY(.5);
    background-color: #e3e3e3;
}

.form-list::before {
    top: 0;
} 

.form-list::after {
    bottom: 0;
}

.form-item {
    box-sizing: border-box;
    display: flex;
    padding: 0rpx 24rpx;
    background-color: #fff;
    height:88rpx;
    line-height:88rpx;
    border-bottom:1rpx solid #e7e7e7;
}  
.form-item1 {
    box-sizing: border-box;
    display: flex;
    padding: 0rpx 24rpx;
    background-color: #fff;
    height:88rpx;
    line-height:88rpx;
    border-bottom:1rpx solid #e7e7e7;
}   
.form-item-bd {
    flex: 1;
    height: 88rpx;
    padding-left:20rpx;
}
.change-address{
  color:#EF652C;
  font-size:28rpx;
}
input, .input {
    box-sizing: border-box;
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    background-color: #fff;
    padding: 0;
}

switch {
    position: absolute;
    right: 40rpx;
    top: 50%;
    margin-right: -10rpx;
    margin-top: -16px;
    transform: scale(0.9);
    transform-origin: right center;
}

.input-placeholder {
    color: #000;
}

.save-btn {
    width: 90%;
    height: 80rpx;
    margin: 0 auto;
    font-size: 32rpx;
    text-align: center;
    line-height: 80rpx;
    background-color: #2EA9DF;
    border-radius: 6rpx;
    color: #fff;
}

.save-btn:active {
    background-color: #369DC9;
}

.hidden {
    /* opacity: 0; */
    display:none;
}

.message {
    position: fixed;
    top: 80%;
    left: 50%;
    width: 400rpx;
    height: 80rpx;
    margin-left: -200rpx;
    background-color: rgba(0, 0, 0, .75);
    border-radius: 20px;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    /* opacity: 0; */
    display:none;
}

.fade-in {
    animation: fadeIn .3s forwards;
}

@keyframes fadeIn {
  from {
    /* opacity: 0; */
    display:none;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
  }

  to {
    /* opacity: 1; */
    display:block;
    -webkit-transform: none;
    transform: none;
  }
}

.area-item {
    line-height: 40px;
    text-align: center;
}

.distpicker {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 560rpx;
    /* display: flex; */
    justify-content: center;
    flex-wrap: wrap;
    background-color: #fff;
}

.distpicker-btn {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    width: 100%;
    padding: 0 40rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #fafafa;
    color: #586C94;
}

.distpicker-content {
    box-sizing: border-box;
    width: 100%;
    height: 560rpx;
    background-color: #fff;
}

.mask {
    position: fixed;
    left: 0;
