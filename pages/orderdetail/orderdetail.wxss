/* pages/orderdetail/orderdetail.wxss */
.container{
  width:100%;
}
::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;
}
.order-header{
  width:100%;
  height:130rpx;
  position:relative;
}
.order-header-img{
  width:100%;
  height:100%;
}
.order-header-text{
  position:absolute;
  color:#fff;
  font-size:32rpx;
  top:44rpx;
  left:24rpx;
}
.order-header-right{
  position:absolute;
  right:24rpx;
  top:50rpx;
  color:#fff;
  font-size:26rpx;
}
.order-time{
  min-height:108rpx;
  padding:24rpx 24rpx;
  color:#666666;
  font-size:28rpx;
  line-height:44rpx;
  margin-bottom:122rpx;
  background:#fff;
}
.order-time1{
  min-height:108rpx;
  padding:24rpx 24rpx;
  color:#666666;
  font-size:28rpx;
  line-height:44rpx;
  background:#fff;
}

.payAddress{
  background:#fff;
  display:flex;
  border-bottom:1rpx solid #E7E7E7;
  margin-bottom:20rpx;
}
.address-phone{
  font-size:26rpx;
}
.addressBox{
  padding-top:20rpx;
  padding-bottom:20rpx;
}
.address-first{
  margin-left:20rpx;
}
.address-color{
  color:#666666;
  font-size:28rpx;
  word-wrap: break-word; 
  word-break: normal;
}
.address-name{
  margin-right:20rpx;
  font-size:32rpx;
}
.change-address{
  height:180rpx;
  line-height:180rpx;
}
.note{
  background:#f4f4f4;
  font-size:28rpx;
}
.note-content{
  width:94%;
  margin:0 auto;
  line-height:50rpx;
}
.payList-box{
  background:#fff;
}
.payList{
  display:flex;
  border-bottom:1rpx solid #f6f6f6;
  height:240rpx;
  padding:0 20rpx;
  padding-top:20rpx;
}
.pay-img{
  width:150rpx;
  height:150rpx;
  margin-top:20rpx;
}
.pay-img image{
  width:100%;
  height:100%;
}
.payList-name{
  font-size:30rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.payList-num{
  color:#9B9B9B;
  font-size:26rpx;
  line-height:60rpx;
}
.payList-price{
  font-size:30rpx;
  color:#FF4043;
}
.pay-decoration-box{
  width:500rpx;
  margin-left:20rpx;
}
.pay-num{
  float:right;
  margin-right:20rpx;
}
.discount{
  border-bottom:1rpx solid #efefef;
  height:100rpx;
  line-height:100rpx;
  padding:0 24rpx;
}
.discount-title{
  color:#333333;
}
.discount-price{
  float:right;
  margin-right:20rpx;
  color:#FF4043;
  font-size:28rpx;
}
.discount-price2{
  float:right;
  margin-right:20rpx;
  color:#9B9B9B;
  font-size:28rpx;
}
.discount-price1{
  font-size:36rpx;
}
.pay-box{
  height:100rpx;
  line-height:100rpx;
  margin-top:20rpx;
  background:#fff;
}
.pay-input-box{
  width:80%;
  margin:0 auto;
}
.pay-input{
  display:inline-block;
}
.detail-cart-bottom{
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: white;
}
.row{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.row-price{
  width:50%;
  text-align:center;
  color:red;
  font-size:36rpx;
}
.row-cart{
  width:50%;
  background-color:#E93B3A;
  text-align:center;
  color:#fff;
  font-size:34rpx;
}
.order-btn{
  display:flex;
  height:108rpx;
  position:fixed;
  bottom:0;
  width:100%;
  border-top:1rpx solid #E7E7E7;
  background:#fff;
  z-index:999;
}
.cancel-btn,.pay-btn{
  width:160rpx;
  height:60rpx;
  margin-right:0;
  margin-left:0;
  padding-right:0;
  padding-left:0; 
  border-radius:4rpx;
  line-height:60rpx;
  font-size:28rpx;
  margin-top:24rpx;
  position:absolute;
  right:24rpx; 
}
.cancel-btn{
  border:1px solid #1A191E;
  color:#1A191E;
  margin-left:330rpx;
  margin-right:40rpx;
  background:#fff;
}
.pay-btn{
border:1px solid #E93B3A;
background:#E93B3A;
color:#fff;
}
.logistics{
  background:#fff;
  height:108rpx;
  border-bottom:1px solid #e7e7e7;
  line-height:108rpx;
  padding:0 24rpx;
  display:flex;
  position:relative;
}
.logistics-img{
 width:24rpx;
 height:36rpx;
 position:absolute;
 right:24rpx;
}
.logistics-img image{
  width:100%;
  height:100%;
}
.chat-box{
  width:100%;
  height:100rpx;
  background:#fff;
  display:flex;
  margin-top:24rpx;
  margin-bottom:24rpx;
}
.chat-img,.phone-img{
  width:44rpx;
  height:44rpx;
  display:inline-block;
  margin-right:20rpx;
  vertical-align: middle;
}
.chat,.phone{
  width:50%;
  line-height:100rpx;
  text-align: center;
}
.chat{
  position:relative;
}
.cBtn{
  opacity:0;
  position:absolute;
  display:block;
  width:100%;
  height:100rpx;
}
.chat-txt{
  color:#666666;
  font-size:26rpx;
}
.chat-line{
  height:40rpx;
  border:1rpx solid #e7e7e7;
  margin-top:30rpx;
}