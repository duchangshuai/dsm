/* 轮播下标的样式 */

 
.swiper .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  margin:auto;
  bottom: 12rpx;  
  display: flex;  
  justify-content: center;  
  z-index: 999;
}  
.swiper .dots .dot{  
  margin: 0 4rpx;  
  width: 24rpx;  
  height: 6rpx;  
  background: #EDEEF0;  
  border-radius: 100rpx;  
  transition: all .6s;  
}  
.swiper .dots .dot.active{   
  background: #FF4043;  
}  