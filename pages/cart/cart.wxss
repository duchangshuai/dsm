.price-box{
  float:left;
  color:#FF4043; 
}
.removeStyle{
  background:#E93B3A;
  width:160rpx;
  height:280rpx;
  color:#fff;
}
.content {
-webkit-transition: all 0.4s;
 transition: all 0.4s;
 -webkit-transform: translateX(90px);
 transform: translateX(90px);
 margin-left: -90px;
}
 .content1 {
-webkit-transition: all 0.4s;
 transition: all 0.4s;
 -webkit-transform: translateX(90px);
 transform: translateX(90px);
} 
.del {
 background-color:#E93B3A;
 width: 160rpx;
 height:300rpx;
 display: flex;
 flex-direction: column;
 align-items: center;
 justify-content: center;
 color: #fff;
 -webkit-transform: translateX(90px);
 transform: translateX(90px);
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
 position:absolute;
 right:10rpx;
}
.touch-move-active .content,
.touch-move-active .del {
 -webkit-transform: translateX(0);
 transform: translateX(0);
}
/* 判断购物车是否为空 */
.cart-noempty{
  /* display:none ; */
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}
.cart-empty{
  /* display: none; */
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: #fff;
}
.no_commodity{
