.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}
.cart_container {
  display: flex;
  flex-direction: row;
}
::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;
}
.scroll {
  margin-bottom: 120rpx;
}
.column {
  display: flex;
  flex-direction: column;
  width:462rpx;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  z-index: 1000;
}
.sku {
  width:160rpx;
  height:52rpx;
  border-radius:4rpx;
  border:1rpx solid #1A191E;
  text-align: center;
  vertical-align: middle;
  line-height:52rpx;
  float:right;
  position: absolute;
  z-index: 99;
  right: 24rpx;
}
.sku-price {
  color:#FF4043;
  position: relative;
  margin-top: 40rpx;
  font-size:30rpx;
}
.total{
  font-size:26rpx;
}
.price {
  color:#E93B3A;
  position: relative;
  font-size:36rpx;
}
.title {
  width: 448rpx;  
  font-size: 30rpx;
  margin-top:54rpx;
  color:#333333;
  word-wrap:break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
