}
.reback-home{
  color:lightsalmon;
  text-align:center;
  margin-top:10rpx;
}
.right image{
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin-right: 30rpx;
  margin-top: 30rpx;
}
.row-total{
  text-align:left;
  width:50%;
  margin-left:24rpx;
}
.cart-content{
